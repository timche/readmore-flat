{
    "manifest_version": 2,

    "name": "{{package.title}}",
    "description": "{{package.description}}",
    "version": "{{package.version}}",
    "author": "{{package.author}}",

    "icons": {
      "16": "assets/img/icons/icon16.png",
      "48": "assets/img/icons/icon48.png",
      "128": "assets/img/icons/icon128.png"
    },

    "permissions": [
        "http://www.readmore.de/"
    ],

    "content_scripts": [
            {
            "matches": [
                "http://www.readmore.de/start",
                "http://www.readmore.de/news/*",
                "http://www.readmore.de/forums/*"
            ],
            "css": ["assets/css/readmore-flat-theme.min.css"],
            "js": ["assets/js/readmore-flat-theme.min.js"],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": ["assets/img/avatar-default.png"]
}
