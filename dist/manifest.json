{
    "manifest_version": 2,

    "name": "Readmore Flat Theme",
    "description": "Ein Flat Theme als Chrome Extension f√ºr readmore.de",
    "version": "0.0.4",
    "author": "timche",

    "icons": {
      "16": "assets/img/icons/icon16.png",
      "48": "assets/img/icons/icon48.png",
      "128": "assets/img/icons/icon128.png"
    },

    "permissions": [
        "http://readmore.de/",
        "http://www.readmore.de/"
    ],

    "content_scripts": [
            {
            "matches": ["http://readmore.de/start", "http://www.readmore.de/start"],
            "css": ["assets/css/readmore-flat-theme.min.css"],
            "js": ["assets/js/readmore-flat-theme.min.js"],
            "run_at": "document_end"
        }
    ]
}
